<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.registration.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>signup</servlet-name>
    <servlet-class>com.registration.controller.SignupServlet</servlet-class>
  </servlet>
<!--mapping-->
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/com.registration.controller.LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>signup</servlet-name>
    <url-pattern>/com.registration.controller.SignupServlet</url-pattern>
  </servlet-mapping>

  <error-page>
    <error-code>404</error-code>
    <location>/Error.jsp</location>
  </error-page>


</web-app>
